<%- include("../partials/public-start", { title }) %>

<% const resourceHighlights = [
  {
    title: "Articles",
    description: "Reflections and observations from workplaces, exploring Organisational Stress Response and related themes.",
  },
  {
    title: "Downloads",
    description: "Concise visual and written explainers of Vivartana's frameworks.",
  },
  {
    title: "FAQs",
    description: "Answers to common questions about ORI Scan™, OOS™, and the approach.",
  },
  {
    title: "Envisions",
    description: "The long-term view that guides Vivartana's work.",
  },
]; %>

<main class="relative min-h-screen bg-canvas pt-12 pb-24 px-6 overflow-hidden">
  <img src="/assests/resoursces/bg.jpeg" alt="Resources background" class="absolute inset-0 h-full w-full object-cover object-center" />
  <div class="absolute inset-0 bg-gradient-to-b from-canvas/34 via-canvas/58 to-canvas/76"></div>

  <div class="container mx-auto max-w-7xl relative z-10">
    <% if (editablePage) { %>
      <section class="section-card rounded-2xl p-8 md:p-10 mb-14">
        <h1 class="text-4xl md:text-6xl font-serif text-thought mb-6"><%= editablePage.title %></h1>
        <div class="prose prose-lg max-w-none prose-headings:font-serif prose-headings:text-thought prose-p:text-thought/85 prose-li:text-thought/85 prose-a:text-action">
          <%- editablePage.content %>
        </div>
      </section>
    <% } else { %>
      <h1 class="text-4xl md:text-6xl font-serif text-thought mb-8">Resources</h1>

      <div class="space-y-6 text-thought/75 text-lg leading-relaxed max-w-4xl mb-12">
        <p>
          This section brings together reflections, practical notes, visual explainers, and frequently asked questions related to Vivartana's work.
        </p>
        <p>
          These resources are intended to help leaders and teams explore how organisations behave under pressure and how they can progressively strengthen their internal coherence.
        </p>
      </div>

      <section class="border border-warmth/20 bg-white p-8 md:p-10 mb-10">
        <h2 class="text-3xl font-serif text-thought mb-6">What You Will Find Here</h2>
        <ul class="space-y-5">
          <% resourceHighlights.forEach((item) => { %>
            <li class="text-thought/80 text-lg leading-relaxed">
              <span class="font-medium text-thought"><%= item.title %></span> - <%= item.description %>
            </li>
          <% }) %>
        </ul>
      </section>

      <section class="border border-warmth/20 bg-white p-8 md:p-10 mb-12">
        <h2 class="text-3xl font-serif text-thought mb-5">Why This Section Exists</h2>
        <p class="text-thought/75 text-lg leading-relaxed mb-4">
          Understanding how organisations behave when tested often begins with noticing familiar patterns from a new perspective.
        </p>
        <p class="text-thought/75 text-lg leading-relaxed">These resources are meant to support that discovery.</p>
      </section>

      <section class="border border-thought/10 bg-thought text-white p-8 md:p-10 mb-14">
        <p class="text-white text-lg leading-relaxed">
          Sometimes, clarity begins by seeing what has always been there, just from a different lens.
        </p>
      </section>
    <% } %>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      <% (menu?.children || []).forEach((item) => { %>
        <a href="<%= item.url || '#' %>" class="group border border-warmth/20 bg-white p-10 hover:border-action transition-colors">
          <h3 class="text-2xl font-serif text-thought group-hover:text-action mb-4 transition-colors"><%= item.title %></h3>
          <div class="flex items-center text-sm font-medium text-warmth group-hover:text-action transition-colors">
            <span>Open</span>
            <span class="ml-2 group-hover:translate-x-1 transition-transform">-&gt;</span>
          </div>
        </a>
      <% }) %>
    </div>
  </div>
</main>

<%- include("../partials/public-end") %>
