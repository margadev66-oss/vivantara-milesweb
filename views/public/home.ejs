<%- include("../partials/public-start", { title }) %>

<main class="min-h-screen">
  <section id="hero" class="relative min-h-[90vh] flex flex-col justify-center px-6 overflow-hidden">
    <img
      src="/assests/home/bg2.jpeg"
      alt="Modern glass architecture viewed upward"
      class="absolute inset-0 h-full w-full object-cover object-center"
    />
    <div class="absolute inset-0 bg-gradient-to-r from-canvas/88 via-canvas/34 to-transparent"></div>
    <div class="container mx-auto max-w-7xl relative z-10">
      <h1 class="text-3xl md:text-5xl lg:text-6xl font-serif font-bold text-thought leading-tight mb-8 tracking-tight max-w-5xl">
        <%= homeContent.hero.title %>
      </h1>

      <% if (homeContent.hero.body_1 || homeContent.hero.body_2) { %>
        <div class="max-w-4xl space-y-3 text-base md:text-lg text-thought/85 leading-relaxed mb-10">
          <% if (homeContent.hero.body_1) { %><p><%= homeContent.hero.body_1 %></p><% } %>
          <% if (homeContent.hero.body_2) { %><p><%= homeContent.hero.body_2 %></p><% } %>
        </div>
      <% } %>

      <a href="/contact" class="cta-button h-9 gap-2 px-4 text-xs whitespace-nowrap sm:text-sm">
        <span><%= homeContent.hero.button_label %></span>
        <span class="opacity-80">-&gt;</span>
      </a>
    </div>

    <a href="#who-we-are" class="absolute bottom-12 left-1/2 -translate-x-1/2 animate-bounce text-thought/30">
      Scroll
    </a>
  </section>

  <section id="who-we-are" class="py-28 bg-white border-t border-warmth/20 px-6">
    <div class="container mx-auto max-w-7xl grid grid-cols-1 lg:grid-cols-12 gap-14">
      <div class="lg:col-span-5">
        <p class="text-sm uppercase tracking-widest text-action mb-6"><%= homeContent.who_we_are.eyebrow %></p>
        <h2 class="text-3xl md:text-4xl font-serif text-thought leading-tight mb-6"><%= homeContent.who_we_are.title %></h2>
      </div>
      <div class="lg:col-span-7 space-y-6 text-lg text-thought/80 leading-relaxed">
        <p><%= homeContent.who_we_are.body_1 %></p>
        <p><%= homeContent.who_we_are.body_2 %></p>
      </div>
    </div>
  </section>

  <section id="what-we-do" class="bg-canvas px-6 py-28 border-t border-warmth/20">
    <div class="container mx-auto max-w-7xl">
      <p class="text-sm uppercase tracking-widest text-action mb-4"><%= homeContent.what_we_do.eyebrow %></p>
      <h2 class="text-4xl md:text-5xl font-serif text-thought mb-8 max-w-4xl leading-tight"><%= homeContent.what_we_do.title %></h2>

      <div class="mb-12 grid grid-cols-1 gap-8 lg:grid-cols-12 lg:items-center">
        <p class="text-lg text-thought/80 leading-relaxed lg:col-span-7"><%= homeContent.what_we_do.intro %></p>
        <div class="lg:col-span-5">
          <div class="relative h-64 w-full overflow-hidden rounded-2xl border border-warmth/20 bg-canvas shadow-[0_16px_40px_-28px_rgba(16,25,37,0.35)] sm:h-72">
            <img
              src="/assests/mini.png"
              alt="Interlocking structures representing coordinated systems"
              class="absolute inset-0 h-full w-full object-cover object-[50%_52%] mix-blend-multiply scale-[1.34]"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-canvas/20 to-transparent"></div>
          </div>
        </div>
      </div>

      <h3 class="text-2xl font-serif text-thought mb-6"><%= homeContent.what_we_do.focus_title %></h3>
      <ul class="grid grid-cols-1 md:grid-cols-2 gap-4">
        <% homeContent.what_we_do.focus_areas.forEach((focusArea, index) => { %>
          <li key="<%= `${focusArea}-${index}` %>" class="flex items-start gap-3 border border-warmth/20 bg-white px-5 py-4">
            <span class="text-action mt-1 flex-shrink-0">+</span>
            <span class="text-thought/80 leading-relaxed"><%= focusArea %></span>
          </li>
        <% }) %>
      </ul>
    </div>
  </section>

  <section id="why-this-matters" class="py-28 bg-thought text-canvas px-6">
    <div class="container mx-auto max-w-7xl grid grid-cols-1 lg:grid-cols-12 gap-14">
      <div class="lg:col-span-5">
        <p class="text-sm uppercase tracking-widest text-action mb-6"><%= homeContent.why_this_matters.eyebrow %></p>
        <h2 class="text-4xl md:text-5xl font-serif leading-tight"><%= homeContent.why_this_matters.title %></h2>
      </div>

      <div class="lg:col-span-7 grid gap-8 lg:grid-cols-5 lg:items-start">
        <div class="lg:col-span-3">
          <p class="text-lg text-white font-semibold leading-relaxed mb-6"><%= homeContent.why_this_matters.intro %></p>
          <ul class="space-y-3 mb-8">
            <% homeContent.why_this_matters.pressure_signals.forEach((signal, index) => { %>
              <li key="<%= `${signal}-${index}` %>" class="text-lg text-white/85 leading-relaxed"><%= signal %></li>
            <% }) %>
          </ul>
          <p class="text-white text-lg font-medium leading-relaxed"><%= homeContent.why_this_matters.closing %></p>
        </div>

        <div class="lg:col-span-2">
          <div class="relative h-64 w-full overflow-hidden rounded-2xl border border-white/15 shadow-[0_18px_44px_-28px_rgba(0,0,0,0.7)] sm:h-72 lg:h-full lg:min-h-[22rem]">
            <img
              src="/assests/bg.png"
              alt="Abstract connected strategy visual"
              class="absolute inset-0 h-full w-full object-cover object-[72%_34%] scale-[1.14]"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-thought/35 to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <section id="how-we-work" class="py-28 bg-white px-6 border-t border-warmth/20">
    <div class="container mx-auto max-w-7xl">
      <p class="text-sm uppercase tracking-widest text-action mb-4"><%= homeContent.how_we_work.eyebrow %></p>
      <h2 class="text-4xl md:text-5xl font-serif text-thought mb-8 max-w-4xl leading-tight"><%= homeContent.how_we_work.title %></h2>
      <p class="text-lg text-thought/80 leading-relaxed max-w-4xl mb-12"><%= homeContent.how_we_work.intro %></p>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-14">
        <% homeContent.how_we_work.steps.forEach((step, index) => { %>
          <article key="<%= `${step.title}-${index}` %>" class="border border-warmth/20 bg-canvas p-8">
            <div class="text-xs uppercase tracking-widest text-action mb-3">Step <%= index + 1 %></div>
            <h3 class="text-2xl font-serif text-thought mb-4"><%= step.title %></h3>
            <p class="text-thought/75 leading-relaxed"><%= step.description %></p>
          </article>
        <% }) %>
      </div>

      <div class="border border-thought/10 bg-thought text-white p-8 md:p-10">
        <h3 class="text-2xl md:text-3xl font-serif mb-6"><%= homeContent.how_we_work.cycle_title %></h3>
        <div class="flex flex-wrap items-center gap-3 mb-6">
          <% homeContent.how_we_work.cycle_stages.forEach((stage) => { %>
            <span key="<%= stage %>" class="px-4 py-2 rounded-full border border-white/20 text-sm uppercase tracking-wide"><%= stage %></span>
          <% }) %>
        </div>
        <p class="text-white/90 leading-relaxed"><%= homeContent.how_we_work.cycle_body %></p>
      </div>
    </div>
  </section>

  <section id="about-the-founder" class="py-28 bg-canvas border-t border-warmth/20 px-6">
    <div class="container mx-auto max-w-7xl grid grid-cols-1 lg:grid-cols-12 gap-12">
      <div class="lg:col-span-7 h-full flex flex-col justify-center space-y-6 text-lg text-thought/80 leading-relaxed">
        <p class="text-sm uppercase tracking-widest text-action mb-6"><%= homeContent.about_founder.eyebrow %></p>
        <h2 class="text-4xl md:text-5xl font-serif text-thought leading-tight mb-6"><%= homeContent.about_founder.title %></h2>
        <p><%= homeContent.about_founder.body_1 %></p>
        <p><%= homeContent.about_founder.body_2 %></p>
        <a href="/contact" class="cta-button h-9 gap-2 px-4 text-xs whitespace-nowrap sm:text-sm w-fit">
          Start a Conversation <span class="opacity-80">-&gt;</span>
        </a>
      </div>

      <div class="lg:col-span-5 lg:mt-[4rem]">
        <div class="relative mx-auto w-full max-w-xl aspect-square overflow-hidden rounded-2xl border border-warmth/20 shadow-[0_16px_40px_-28px_rgba(16,25,37,0.35)] lg:mx-0 lg:max-w-[34rem]">
          <img src="/assests/potrait.png" alt="Founder speaking at a podium" class="absolute inset-0 h-full w-full object-cover object-center" />
        </div>
      </div>
    </div>
  </section>

  <section id="trust-markers" class="py-28 bg-white border-t border-warmth/20 px-6">
    <div class="container mx-auto max-w-7xl">
      <div class="flex flex-col md:flex-row md:items-end md:justify-between gap-6 mb-12">
        <div>
          <p class="text-sm uppercase tracking-widest text-action mb-4"><%= homeContent.trust_markers.eyebrow %></p>
          <h2 class="text-4xl md:text-5xl font-serif text-thought"><%= homeContent.trust_markers.title %></h2>
        </div>
        <a href="/knowledge-assets" class="text-action font-medium flex items-center gap-2">
          <%= homeContent.trust_markers.link_label %> <span class="opacity-80">-&gt;</span>
        </a>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
        <% homeContent.trust_markers.items.forEach((marker, index) => { %>
          <div key="<%= `${marker.title}-${index}` %>" class="border border-warmth/20 bg-canvas p-8">
            <h3 class="text-xl font-serif text-thought mb-3"><%= marker.title %></h3>
            <p class="text-thought/70 leading-relaxed"><%= marker.description %></p>
          </div>
        <% }) %>
      </div>

      <div class="mt-12">
        <a href="/resources" class="text-action font-medium inline-flex items-center gap-2">
          More Resources <span class="opacity-80">-&gt;</span>
        </a>
      </div>
    </div>
  </section>

  <section id="call-to-action" class="py-32 bg-thought text-center px-6 relative overflow-hidden">
    <img
      src="/assests/home/bg3.jpeg"
      alt="Monochrome industrial light fixture"
      class="absolute inset-0 h-full w-full object-cover object-center scale-[0.97]"
    />
    <div class="absolute inset-0 bg-thought/72"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[800px] h-[800px] border border-white/5 rounded-full"></div>
    <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-[600px] h-[600px] border border-white/5 rounded-full"></div>

    <div class="relative z-10 mx-auto max-w-7xl">
      <h2 class="text-4xl md:text-6xl font-serif text-white mb-12 tracking-tight max-w-5xl mx-auto"><%= homeContent.cta.title %></h2>
      <a href="/contact" class="cta-button h-10 px-5 text-sm whitespace-nowrap sm:text-base"><%= homeContent.cta.button_label %></a>
    </div>
  </section>
</main>

<%- include("../partials/public-end") %>

