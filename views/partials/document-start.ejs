<!doctype html>
<html lang="en">
  <head>
    <%
      const SITE_NAME = "Vivartana Transformation Services";
      const SITE_SHORT_NAME = "Vivartana";
      const DEFAULT_DESCRIPTION =
        "Vivartana helps organisations strengthen how they sense, interpret, coordinate, and hold together when tested by uncertainty, disruption, and pressure.";

      const pageTitle = title ? `${title} | ${SITE_NAME}` : SITE_NAME;
      const metaDescription =
        typeof description === "string" && description.trim().length > 0 ? description.trim() : DEFAULT_DESCRIPTION;
    %>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title><%= pageTitle %></title>
    <meta name="description" content="<%= metaDescription %>" />
    <meta property="og:title" content="<%= pageTitle %>" />
    <meta property="og:description" content="<%= metaDescription %>" />
    <meta property="og:site_name" content="<%= SITE_SHORT_NAME %>" />
    <meta property="og:type" content="website" />
    <meta name="twitter:card" content="summary" />

    <link rel="icon" href="/assests/favicon.ico" sizes="any" />
    <link rel="mask-icon" href="/assests/favicon.svg" color="#101925" />
    <link rel="shortcut icon" href="/assests/favicon.ico" />
