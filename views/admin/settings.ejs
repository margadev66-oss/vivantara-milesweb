<%- include("../partials/admin-start", { title }) %>

<h1 class="text-3xl font-serif text-thought mb-8">Global Settings</h1>

<% if (saved) { %>
  <div class="mb-6 border border-action/30 bg-white p-4 text-thought/80">Saved.</div>
<% } %>
<% if (error) { %>
  <div class="mb-6 border border-red-500/30 bg-white p-4 text-red-500"><%= error %></div>
<% } %>

<form method="post" action="/admin/settings" class="space-y-8 bg-white p-8 border border-warmth/20">
  <div>
    <label class="block text-thought font-medium mb-2" for="hero_statement">Hero Statement</label>
    <textarea id="hero_statement" name="hero_statement" rows="3" class="w-full p-3 border border-warmth/30 focus:border-thought outline-none"><%= heroStatement %></textarea>
    <p class="text-sm text-thought/60 mt-1">This text appears prominently on the home page.</p>
  </div>

  <div>
    <label class="block text-thought font-medium mb-2" for="pillars_description">Pillars (JSON Array)</label>
    <textarea id="pillars_description" name="pillars_description" rows="6" class="w-full p-3 border border-warmth/30 focus:border-thought outline-none font-mono text-sm"><%= pillarsDescription %></textarea>
    <p class="text-sm text-thought/60 mt-1">Must be a valid JSON array of strings.</p>
  </div>

  <div>
    <label class="block text-thought font-medium mb-2" for="about_bio">About Bio</label>
    <textarea id="about_bio" name="about_bio" rows="5" class="w-full p-3 border border-warmth/30 focus:border-thought outline-none"><%= aboutBio %></textarea>
    <p class="text-sm text-thought/60 mt-1">Short biography displayed on the Home page.</p>
  </div>

  <div>
    <label class="block text-thought font-medium mb-2" for="home_content">Home Content (JSON)</label>
    <textarea id="home_content" name="home_content" rows="18" class="w-full p-3 border border-warmth/30 focus:border-thought outline-none font-mono text-sm"><%= homeContent %></textarea>
    <p class="text-sm text-thought/60 mt-1">Must be valid JSON. Update headlines, section copy, trust markers, and the CTA.</p>
  </div>

  <button type="submit" class="bg-action text-white px-6 py-2 font-medium hover:bg-action/90 transition-colors">Save Changes</button>
</form>

<%- include("../partials/admin-end") %>

