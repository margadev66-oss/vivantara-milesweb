<%- include("../partials/admin-start", { title }) %>

<div class="flex flex-col gap-4 md:flex-row md:items-center md:justify-between mb-6">
  <div>
    <h1 class="text-3xl font-serif text-thought">Site Pages</h1>
    <p class="text-sm text-thought/60 mt-2">Use Sync Navigation for defaults or create additional pages manually.</p>
  </div>
  <a href="/admin/pages/new" class="inline-flex items-center gap-2 bg-action text-white px-4 py-2 text-sm font-medium hover:bg-action/90 transition-colors w-fit">
    <span>New Page</span>
  </a>
</div>

<% if (saved) { %>
  <div class="mb-6 border border-action/30 bg-white p-4 text-thought/80">Saved.</div>
<% } %>

<div class="bg-white border border-warmth/20">
  <table class="w-full text-left">
    <thead class="bg-warmth/10 border-b border-warmth/20">
      <tr>
        <th class="p-4 font-serif text-thought">Page Title</th>
        <th class="p-4 font-serif text-thought">Slug / Path</th>
        <th class="p-4 font-serif text-thought text-right">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% (pages || []).forEach((page) => { %>
        <tr class="border-b border-warmth/10 last:border-0 hover:bg-warmth/5">
          <td class="p-4 font-medium"><%= page.title %></td>
          <td class="p-4 text-thought/70 font-mono text-sm">/<%= page.slug %></td>
          <td class="p-4 text-right">
            <a href="/admin/pages/<%= encodeURIComponent(page.id) %>" class="inline-flex items-center space-x-1 text-action hover:text-action/80 font-medium text-sm">
              <span>Edit Content</span>
            </a>
          </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>

<%- include("../partials/admin-end") %>

